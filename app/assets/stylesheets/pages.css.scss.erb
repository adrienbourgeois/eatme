@font-face {
  font-family: 'Billabong';
  src: url(<%= asset_path 'Billabong.ttf' %>);
  font-weight: normal;
  font-style: normal;
}

#map-canvas {
  height: 100%;
  width: 100%;
}

.modal-dialog {
  width: 90%;
  height: 100%;
}

.hidden {
  display: none;
}

h3 {
  font-family: 'Billabong', sans-serif;
  font-size: 240%;
  color: rgb(150,150,150);
}

h4 {
  font-family: 'Billabong', sans-serif;
  font-size: 240%;
  color: rgb(220,220,220);
}

.time {
  text-align: right;
  font-size: 12px;
}

.vicinity {
  text-align: right;
}

.food_picture {
  width: 100%;
  height: auto;
}

.fa-3x {
  font-size: 500%;
}

