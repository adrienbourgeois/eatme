@font-face {
  font-family: 'Billabong';
  src: url(<%= asset_path 'Billabong.ttf' %>);
  font-weight: normal;
  font-style: normal;
}

.logo {
  transform:rotate(-11deg);
  -ms-transform:rotate(-11deg); /* IE 9 */
  -webkit-transform:rotate(-11deg); /* Safari and Chrome */
  width:12%;
}

.navbar-nav {
  li {
    a {
      <%#font-family: 'Billabong';%>
      <%#color: #000000;%>
      font-size: 18px;
    }
  }
}

.sydney {
  background-image: url(<%= image_path 'sydney.jpg' %>);
  background-size: auto;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.navbar-brand {
  font-family: 'Billabong';
  font-size: 26px;
  color: rgb(179,124,13);
}

#map-canvas {
  height: 100%;
  width: 100%;
}

.modal-dialog {
  width: 70%;
  height: 90%;
}

h1 {
  font-family: 'Billabong', sans-serif;
  font-size: 8vw;
  text-shadow: 0px 1px 0px #000;
  margin: 0;
  padding: 0;
  color: rgb(200,200,200);
}

h2 {
  font-family: 'Billabong', sans-serif;
  font-size: 4vw;
}

h3 {
  font-family: 'Billabong', sans-serif;
  font-size: 2vw;
  color: rgb(150,150,150);
}

#text_fa {
  vertical-align: center;
}

.fa {
  color: #722724;
  &:hover {
    color: #ffffff;
  }
}

.pretty_button {
  padding: 10px;
  border-radius: 100px;
  font-family: 'Billabong', sans-serif;
  text-align: center;
  width: 250px;
  background-color: rgb(33,44,80);
  font-size: 34px;
  &:hover {
    background-color: rgb(33,44,160);
  }
}

body {
  <%#background-color: rgb(2,17,24);%>
  <%#background-color: rgb(200,200,200);%>
  background-color: rgb(49,72,151);
}

.container {
  padding: 30px 30px 0px 30px;
}

.col-md-4 {
  <%#padding: 30px;%>
}

.title {
  //background-image: url(<%= image_path 'noise-black.png' %>);
  <%#text-align: center;%>
  padding: 105px 20px 50px 20px;
  background-color: rgba(33,44,80,0.6);
  margin-bottom: 30px;
  &:hover {
    background-color: rgba(33,44,80,0.7);
  }
}

#time {
  text-align: right;
}

#food_picture {
  //background-image: url(<%= image_path 'noise-black.png' %>);
  text-align: left;
  margin: 0 10px 20px 10px;
  width: 326px;
  background-color: #000000;
  padding: 10px 10px 20px 10px;
  border-radius: 20px;
  h2{
    color: rgb(180,180,180);
  }
}

#footer {
  background-color: rgb(40,40,40);
  padding: 10px 40px 25px 40px;
  text-align: right;
  color: rgb(150,150,150);
  .fa {
    color: rgb(28,71,43);
    &:hover {
      color: rgb(49,151,83);
    }
  }
}

