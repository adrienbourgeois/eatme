span.page data-page_name="just_eaten"
script src="https://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"
#jqt
  #home.edgetoedge
    .toolbar
      h1 Just Eaten
      /! <a class="button slideup" id="infoButton" href="#about">About</a>
    ul.edgetoedge
      li
        a href="#about"
          |About
      - @photos.each do |photo|
        li
          = image_tag photo.image_low_resolution
  #about.edgetoedge
    .toolbar
      a href="#" class="back button"
        |Back
      h1 About
    ul.edgetoedge
      li
        p
          |Adrien Bourgeois
        p
          |LinkedIn

#myModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
  .modal-dialog
    #map-canvas
    .modal-content
      /.modal-header
        /button.close aria-hidden="true" data-dismiss="modal" type="button"
        /h4#myModalLabel.modal-title Modal title
      /.modal-body
      /.modal-footer
        /button.btn.btn-default data-dismiss="modal" type="button"
        /button.btn.btn-primary type="button"

div#photos_grid
  - @photos.each_slice(3) do |photos|
    .row
      - photos.each do |photo|
        .col-md-4
          center
            .food_picture_container
              = image_tag photo.image_low_resolution, class:'food_picture'
              br
              h3
                = photo.place.name
              .row
                .col-md-6
                  a href="#{photo.instagram_url}" target="_blank"
                    i.fa.fa-instagram.fa-3x
                  '&nbsp;&nbsp;&nbsp;
                  a.show_map href="#" data-toggle="modal" data-target="#myModal" data-latitude="#{photo.place.latitude}" data-longitude="#{photo.place.longitude}" data-place_name="#{photo.place.name}"
                    i.fa.fa-map-marker.fa-3x
                .col-md-6
                  #time
                    = minutes_ago photo.updated_at
                    br
                    .fa
                      = photo.place.vicinity

center
  a#more href="#" data-page=2
    .pretty_button
      span
        |More

br

