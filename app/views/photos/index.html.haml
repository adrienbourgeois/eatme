.photos
  =render partial:'shared/map'
  .container
    %h1 Recently eaten somewhere in the world
    %br

    .row
      -@photos.each do |photo|
        .col-md-4
          .item
            .align-center
              %h3=photo.place.name
              =image_tag photo.image_low_resolution
              %br
              ="#{time_ago_in_words(photo.updated_at)} ago"
              %br
              %h4=photo.place.vicinity
              %h5=photo.place.city_name
              %button.btn.show-map{ 'data-latitude'=>photo.place.latitude, 'data-longitude'=>photo.place.longitude,  'data-toggle'=>'modal', 'data-target'=>'#map-modal' }
                .fa.fa-map-marker

    .align-center
      = paginate @photos, :theme => 'twitter-bootstrap-3'